<table class='table table-bordered table-hover' >
  	<thead class="thead-dark"> 
  		<th>Username</th>
  		<th>Phone</th>
  		<th>Datetime</th>
  		<th>Barber</th>
  		<th>Color</th>
  	</thead>

    <tbody>
    <% @results.each do |row|%>
      <tr>
          <td><%= row['username'] %></td>
          <td><%= row['phone'] %></td>
          <td><%= row['datestamp'] %></td>
          <td><%= row['barber'] %></td>
          <td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
      </tr>

    <% end %>
    </tbody>
    
</table>
